@import './_mixins';

/* =Structure
----------------------------------------------- */

body {
  +respond-above($lg-screen) { padding: 0 2em; }
}
#page {
  margin: 0 auto;
  max-width: 1280px;
  padding: 0 1em;
  +respond-above($md-screen) { padding: 0 2em; }
}

#primary {
  +respond-above($md-screen) {
    float: left;
    width: 68%;
    margin-right: 2%;
  }
  +respond-above($lg-screen) {
    width: 73%;
  }
  +respond-above($xl-screen) {
    width: 79%;
    margin-right: 1%;
  }
}
#secondary {
  +respond-above($md-screen) {
    float: left;
    width: 30%;
  }
  +respond-above($lg-screen) {
    width: 25%;
  }
  +respond-above($xl-screen) {
    width: 20%;
  }
}

footer {
  clear: both;
  margin: 0 -1em;
  padding-top: 1em;
  +respond-above($md-screen) { margin: 0 -2em; }
}

/******************************
 Styles for Header Widget Areas
 ******************************/

#front-page-widgets {
  padding: 0;
  overflow: hidden;
}
#front-page-widgets .widget-title {
  font-size: 14px;
}
#front-page-left {
  margin-bottom: 2em;
  +respond-above($md-screen) {
    float: left;
    position: relative;
    width: 68%;
    margin-right: 2%;
    margin-bottom: 1em;
  }
  +respond-above($lg-screen) {
    width: 73%;
  }
}
#front-page-right {
  +respond-above($md-screen) {
    float: left;
    width: 30%;
    /* for statement */
    font-size: 95%;
  }
  +respond-above($lg-screen) {
    width: 25%;
  }
}
#front-page-bottom {
  clear: both;
  width: 100%;
}
#front-page-bottom .widget {
  margin: 0;
  +respond-above($md-screen) {
    clear: none;
    float: left;
    margin-right: 3.7%;
    width: 30.85%;
  }
}

#front-page-widgets .ag_gallery_widget {
  // Make space for the borders
  margin: -2px -2px 0.5em;
  position: relative;

  .widget-title {
    padding-left: 2px;
  }

  a {
    position: relative;
    display: inline-block;
    vertical-align: top;
    box-sizing: border-box;
    width: 50%;
    height: 0;
    padding-bottom: 50%;
    +respond-above($sm-screen) { width: 33%; padding-bottom: 33%; }
    +respond-above($md-screen) { width: 31%; padding-bottom: 31%; }
    +respond-above($lg-screen) { width: 23%; padding-bottom: 23%; }

    img  {
      position: absolute;
      border: 2px solid white;
      width: 100%;
      height: 100%;
    }
  }

  +respond-between($md-screen, $lg-screen) {
    a:nth-of-type(10),
    a:nth-of-type(11)
    a:nth-of-type(12) {
      display: none;
    }
  }
}

/********************
 Homepage News header
 ********************/

#home-news-banner {
  background: #222;
  clear: both;
  display: block;
  margin: 1.625em -1em;
  padding: 0.625em 1em;
  +respond-above($md-screen) {
    margin: 1.625em -2em;
    padding: 0.625em 2em;
  }
}
#home-news-banner h2 {
  font-size: 20px;
  font-weight: bold;
  color: white;
}
#home-news-banner h2 a {
  color: white;
}
