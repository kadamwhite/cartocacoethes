/* =Header
----------------------------------------------- */

#branding {
  border-top: 2px solid #bbb;
  padding-bottom: 10px;
  position: relative;
  z-index: 9999;
}
#site-title {
  margin-right: 270px;
  padding: 3.65625em 0 0;
}
#site-title a {
  color: #111;
  font-size: 30px;
  font-weight: bold;
  line-height: 36px;
  text-decoration: none;
}
#site-title a:hover,
#site-title a:focus,
#site-title a:active {
  color: #1982d1;
}
#site-description {
  color: #7a7a7a;
  font-size: 14px;
  margin: 0 270px 3.65625em 0;
}
#branding img {
  height: auto;
  display: block;
  width: 100%;
}
