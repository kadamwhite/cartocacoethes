{
  "private": true,
  "name": "emilygarfield.com",
  "version": "1.0.0",
  "description": "WordPress theme and plugins for emilygarfield.com",
  "author": "K Adam White",
  "license": "(Artistic-2.0 OR GPL-2.0-or-later)",
  "homepage": "https://github.com/kadamwhite/emilygarfield.com#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kadamwhite/emilygarfield.com.git"
  },
  "bugs": {
    "url": "https://github.com/kadamwhite/emilygarfield.com/issues"
  },
  "browserslist": [
    ">1%",
    "last 4 versions",
    "Firefox ESR",
    "not ie < 10"
  ],
  "scripts": {
    "postinstall": "composer install",
    "prebuild": "node .bin/clean-build.js",
    "build": "webpack --config=.config/webpack.config.prod.js",
    "eslint": "eslint wp-content/themes/ehg/src wp-content/themes/ehg/blocks .config",
    "phpcs": "vendor/bin/phpcs --standard=phpcs.ruleset.xml --ignore=wp-content/themes/twenty* -s .",
    "lint": "npm run eslint && npm run phpcs",
    "start": "webpack-dev-server --config .config/webpack.config.dev.js",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/core": "7.0.0",
    "@humanmade/webpack-helpers": "^0.4.0",
    "@wordpress/babel-preset-default": "^4.1.0",
    "acorn": "^6.1.1",
    "babel-eslint": "^10.0.1",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "eslint": "^5.16.0",
    "eslint-config-humanmade": "^0.6.0",
    "eslint-config-react-app": "^3.0.8",
    "eslint-plugin-flowtype": "^3.4.2",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.11.1",
    "jest": "^24.6.0",
    "node-sass": "^4.11.0",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.2.1"
  }
}
